        "@nomiclabs/hardhat-etherscan": "^3.1.2",
        "@openzeppelin/contracts": "4.7.2",
        "chai": "4.3.6",
        "chai-bn": "^0.3.1",
        "dotenv": "16.0.1",
        "eslint": "8.21.0",
        "eslint-config-standard": "17.0.0",
